<header class="app-bar promote-layer">
    <div class="app-bar-container">
        <button class="menu"><span class="icon-menu"></span></button>

        <div class="Heading">
            <h1 class="title"><span>Articles</span></h1>
        </div>
    </div>
</header>
<main>
    <div class="AppControls">
        <div class="AppControls--box AppControls-left">
      </div>

        <div class="AppControls--box AppControls-middle"></div>

        <div class="AppControls--box AppControls-right">
            <a class="button--icontext button--ricontext" href="<%= new_article_path %>"><i class="icon-plus"></i> <span>New Photo</span></a>
        </div>
    </div>

    <div class="CardListTable">
        <ul class="CardListTable-body">
             <%= form_for_filterrific @filterrific do |f| %>
<div class = "box1">
<div class = "box2">
   Language
    <%= f.select(
      :with_language_id,
      @filterrific.select_options[:with_language_id],
      { include_blank: '- Any -' }
    ) %>
  </div>
  <div class="box3">
   Category
   <%= f.select(
    :with_category_id,
     @filterrific.select_options[:with_category_id],
     { include_blank: '- Any -' }
    ) %>
  </div>

 <div class="box4">
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
    ) %>
  </div>
</div>
<div class="gap"></div>
<% end %>
<div id= "filterrific_results">
<%= render(
  partial: 'articles/article',
  locals: { article: @article }
) %>
</div>

       </ul>
    </div>

</main>
          

